#!/bin/sh

set -e

DISTS=${DISTS:-$(dists "${DIST}")}

exec \
  /usr/bin/env \
  GNUPGHOME=/nonexistent \
  /usr/bin/debmirror \
  "--allow-dist-rename" \
  "--host" "${HOST}" \
  "--root" "${DIST}" \
  "--dist" "${DISTS}" \
  "--section" "${SECTIONS}" \
  "--i18n" \
  "--arch" "${ARCHES}" \
  "--method" "${METHOD}" \
  "--keyring" "${KEYRING_FILE}" \
  "--rsync-extra=none" \
  "--getcontents" \
  "--diff=mirror" \
  "--progress" \
  "/mirror/${DIST}"
